---
import Layout from '~/layouts/LandingLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Adherlo',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Adherence"
    title="Adherence tracking simple and easy."
    subtitle="Adherlo is working in progress and more information will be available soon. Stay tuned!"
    
  
    image={{
      src: 'https://images.unsplash.com/photo-1597423498219-04418210827d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'Magnet attracting screws. Work in progress.',
    }}
  />

  <CallToAction
    title="Coming soon"
    subtitle="We are working on this product. You will see it very soon. Stay tuned!"
    
  />
</Layout>
