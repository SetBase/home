---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Steps3 from '~/components/widgets/Steps3.astro';

const metadata = {
  title: 'Kontakt',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakt" title="Lassen Sie uns in Verbindung treten!" />

  <ContactUs
    id="form"
    title=""
    subtitle="Senden Sie uns eine Nachricht oder treten Sie mit uns in Kontakt via Email, Telefon oder Whatsapp!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'E-Mail',
      },
    ]}
    textarea={{
      label: 'Nachricht',
    }}
    disclaimer={{
      label:
        'Durch das Absenden dieses Kontaktformulars stimmen Sie der Erhebung Ihrer persönlichen Daten zu.',
    }}
    description="Unser Support-Team antwortet in der Regel innerhalb von 24 Geschäftsstunden."
  />

  <!-- Features2 Widget ************** -->

  <Steps3
    title="Wir sind hier, um Ihnen zu helfen!"
    items={[

      
      {
        title: 'Telefon',
        description: '+41 78 320 72 65',
        icon: 'tabler:headset',
      },
      {
        title: 'E-Mail',
        description: 'info @ setbase.ch',
        icon: 'tabler:mail',
      },
      {
        title: 'Chatten Sie mit uns auf WhatsApp',
        href: 'https://wa.me/41783207265',
        icon: 'tabler:phone'
      },
    ]}
  />
</Layout>
